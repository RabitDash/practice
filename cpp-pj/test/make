#!/usr/bin/env python3
import subprocess as sp

def check(status, output):
    if status is not 0:
        print(output)
        exit(0)

src = sp.getoutput("ls src/").split('\n')  # list
for file in src:
    if file.find(".h") is not -1:
        src.remove(file)

for file in src:
    status, output = sp.getstatusoutput("g++ " + "-c src/" + file + " -o " + "obj/" + file.split(".cpp")[0] + ".o")
    check(status, output)

status, output = sp.getstatusoutput("ls obj/")  # list
check(status, output)
obj = output.split('\n')
objects = ""
for file in obj:
    objects += "obj/" + file + " "
sp.getoutput("g++ " + objects + " -o " + "bin/" + "main")
